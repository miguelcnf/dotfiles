[user]
    name = Miguel Fonseca
    email = miguel.cnf@gmail.com

[core]
    editor = vim

[alias]
    gl = log --graph --decorate --pretty=oneline --abbrev-commit --all
    glb = log --graph --decorate --pretty=oneline --abbrev-commit
    b = branch
    d = diff
    dc = diff --cached
    st = status -sb
    ci = commit
    co = checkout
    serve = daemon --reuseaddr --base-path=. --export-all --verbose

[color]
    ui = auto

[color "branch"]
    current = green reverse
    local = green
    remote = red

[push]
	default = simple
